<UserControl
    x:Class="Trackery_App.Views.DiscoveryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Trackery_App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            FontSize="28"
            Foreground="White"
            Text="Discover" />

        <StackPanel Margin="0,0,0,10" Orientation="Horizontal" />

        <StackPanel>

            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0" />
                </Style>
            </StackPanel.Resources>

            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Left"
                FontSize="20"
                Foreground="White"
                Text="Most Watched" />

            <StackPanel Orientation="Horizontal">
                <Border
                    Width="150"
                    Height="150"
                    Margin="0"
                    Background="#844eff"
                    CornerRadius="10" />

                <Border
                    Width="150"
                    Height="150"
                    Background="#4e99ff"
                    CornerRadius="10" />

                <Border
                    Width="150"
                    Height="150"
                    Background="#4eff91"
                    CornerRadius="10" />

                <Border
                    Width="150"
                    Height="150"
                    Background="#ecff4e"
                    CornerRadius="10" />
            </StackPanel>

        </StackPanel>
    </StackPanel>
</UserControl>
