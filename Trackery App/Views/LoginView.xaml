<Window
    x:Class="Trackery_App.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Trackery_App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Trackery_App.ViewModels"
    Title="LoginView"
    Width="800"
    Height="550"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border CornerRadius="24">
        <Border.Background>
            <ImageBrush ImageSource="/Images/background-image.png" Stretch="Fill" />
        </Border.Background>
        <Border BorderThickness="3" CornerRadius="20">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 1">
                    <GradientStop Offset="0.0" Color="{StaticResource winBorderColor1}" />
                    <GradientStop Offset="1" Color="{StaticResource winBorderColor2}" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush Opacity="0.7" StartPoint="0, 1" EndPoint="1, 0">
                    <GradientStop Offset="0.0" Color="{StaticResource primaryBackColor1}" />
                    <GradientStop Offset="1" Color="{StaticResource primaryBackColor2}" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>


                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Foreground="DarkGray"
                        Text="LOG IN" />
                    <Button
                        x:Name="MinimizeButton"
                        Grid.Column="1"
                        Click="MinimizeButton_Click"
                        Style="{StaticResource ControlsButtonStyle}">

                        <Path
                            Width="16"
                            Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="M 2,8 L 14,8"
                            StrokeEndLineCap="Round"
                            StrokeStartLineCap="Round" />
                    </Button>
                    <Button
                        x:Name="CloseButton"
                        Grid.Column="2"
                        Click="CloseButton_Click"
                        Style="{StaticResource ControlsButtonStyle}">
                        <Path
                            Width="16"
                            Height="16"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Data="M 2,2 L 14,14 M 14,2 L 2,14"
                            StrokeEndLineCap="Round"
                            StrokeLineJoin="Round"
                            StrokeStartLineCap="Round" />
                    </Button>
                </Grid>
                <StackPanel
                    Grid.Row="2"
                    Width="250"
                    Margin="0,35,0,0"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="0,50,0,0"
                        HorizontalAlignment="Center"
                        FontSize="25"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="Trackery App" />
                    <TextBlock
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="LightGray"
                        Text="Enter your credentials" />
                    <TextBlock
                        Margin="0,35,0,0"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="DarkGray"
                        Text="Username: " />
                    <TextBox
                        x:Name="Username"
                        Height="23"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0"
                        VerticalAlignment="Center"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,1"
                        CaretBrush="LightGray"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="{Binding Username, Mode=OneWayToSource, UpdateSourceTrigger=Explicit}">
                        <TextBox.Background>
                            <ImageBrush
                                AlignmentX="Left"
                                ImageSource="/Images/user-icon.png"
                                Stretch="None" />
                        </TextBox.Background>

                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoginCommand}" />
                        </TextBox.InputBindings>

                    </TextBox>
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="DarkGray"
                        Text="Password: " />
                    <local:BindablePasswordBox
                        x:Name="Password"
                        Height="23"
                        Margin="0,5,0,0"
                        Password="{Binding Password, Mode=OneWayToSource, UpdateSourceTrigger=Explicit}" />
                    <TextBlock
                        Height="30"
                        Margin="0,10,0,0"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="#D7596D"
                        Text="{Binding ErrorMessage}"
                        TextWrapping="Wrap" />
                    <Button
                        x:Name="LoginButton"
                        Grid.Column="2"
                        Margin="0,30,0,0"
                        BorderThickness="0"
                        Command="{Binding LoginCommand}"
                        Content="LOGIN"
                        Cursor="Hand"
                        FontSize="12"
                        Foreground="White"
                        IsTabStop="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#1E8BE6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3aa0ff" />
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1572BF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Width="150"
                                    Height="40"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <StackPanel
                        Margin="0,15,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="DarkGray"
                            Text="Forgot Password?" />
                        <TextBlock
                            Margin="8,0,0,0"
                            Cursor="Hand"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="Reset" />
                    </StackPanel>

                </StackPanel>
            </Grid>


        </Border>
    </Border>
</Window>
