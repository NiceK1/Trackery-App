<UserControl
    x:Class="Trackery_App.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Trackery_App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="580"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid Margin="0,20,0,20" DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Pile 1 -->
        <Border Grid.Column="0"
            Background="{StaticResource color6}"
            CornerRadius="12"
            Margin="10"
            Padding="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock
                Text="{Binding Stock.Count}"
                FontSize="40"
                FontWeight="Bold"
                Foreground="#DCE6F2"
                HorizontalAlignment="Center" />
                <TextBlock
                Text="Items in Stock"
                FontSize="40"
                Foreground="#DCE6F2"
                HorizontalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Pile 2 -->
        <Border Grid.Column="1"
            Background="{StaticResource color3}"
            CornerRadius="12"
            Margin="10"
            Padding="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock
                Text="{Binding Deliveries.Count}"
                FontSize="40"
                FontWeight="Bold"
                Foreground="#DCE6F2"
                HorizontalAlignment="Center" />
                <TextBlock
                Text="Deliveries"
                FontSize="40"
                Foreground="#DCE6F2"
                HorizontalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Pile 3 -->
        <Border Grid.Column="2"
            Background="{StaticResource color7}"
            CornerRadius="12"
            Margin="10"
            Padding="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock
                Text="{Binding Employees.Count}"
                FontSize="40"
                FontWeight="Bold"
                Foreground="#DCE6F2"
                HorizontalAlignment="Center" />
                <TextBlock
                Text="Workers"
                FontSize="40"
                Foreground="#DCE6F2"
                HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
